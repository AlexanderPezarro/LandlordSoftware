# Server Configuration
PORT=3000
NODE_ENV=development

# Database
# For production, use absolute path: file:/absolute/path/to/data/landlord.db
DATABASE_URL=file:./data/landlord.db

# Authentication & Session
# IMPORTANT: Generate a strong random secret for production
# Example: openssl rand -base64 32
SESSION_SECRET=change-this-in-production
JWT_SECRET=change-this-in-production

# Client URL (for CORS in development)
CLIENT_URL=http://localhost:5173

# Storage
# Directory for uploaded files (relative to project root)
UPLOAD_DIR=uploads

# Bank Integration
# AES-256 encryption key for OAuth tokens (32 bytes = 64 hex characters)
# Generate with: openssl rand -hex 32
BANK_TOKEN_ENCRYPTION_KEY=your_64_character_hex_string_here
